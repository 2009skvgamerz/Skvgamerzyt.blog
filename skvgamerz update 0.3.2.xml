    <!-- Custom Styles -->
    <style>
        /* General Styles */
        body {
            background-color: #f9f9f9;
            color: #333333;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        a {
            color: #ff6f61;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        header, footer {
            background-color: #ffffff;
            padding: 20px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        nav {
            margin: 20px 0;
        }
        nav a {
            margin: 0 10px;
            color: #333333;
            font-weight: bold;
        }
        nav a:hover {
            color: #ff6f61;
        }
        .social-icons {
            margin: 20px 0;
        }
        .social-icons a {
            margin: 0 10px;
            color: #ff6f61;
            font-size: 24px;
            display: inline-block;
        }
        .content {
            padding: 20px;
        }
        footer {
            font-size: 14px;
            color: #888888;
        }
        /* Responsive Design */
        @media (max-width: 600px) {
            .social-icons a {
                font-size: 20px;
                margin: 0 5px;
            }
            nav a {
                display: block;
                margin: 10px 0;
            }
        }
    </style>
</head>

<body>
    <header>
